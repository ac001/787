<?xml version="1.0"?>

<!--
Davtron Clock
-->

<PropertyList>

  <name>Davtron Clock</name>
  <w-base>24</w-base>
  <h-base>24</h-base>
  <w>24</w>
  <h>24</h>

  <layers>
	<layer>
	<name>background</name>
	<w>128</w>
	<h>128</h>
	<texture>
	<path>Aircraft/787/Instruments/Textures/clock.rgb</path>
	<x1>0</x1>
	<y1>0</y1>
	<x2>1</x2>
	<y2>1</y2>
	</texture>
  </layer>
  
  <layer>    
    <name>display</name>
    <type>text</type>
    <font>led</font>
    <point-size>6.0</point-size>
    <color>
      <red>0.9</red>
      <green>0.0</green>
      <blue>0.0</blue>
    </color>
    <chunks>
      <chunk>
        <type>text-value</type>
        <property>/instrumentation/clock/indicated-short-string</property>
       </chunk>
    </chunks>
    <transformations>
      <transformation>
        <type>x-shift</type>
        <offset>-20</offset>
      </transformation>
      <transformation>
        <type>y-shift</type>
        <offset>20</offset>
      </transformation>
    </transformations>
  </layer>
  </layers>
  
</PropertyList>